<?xml version="1.0"?>
<block>
  <name>svl_sink</name>
  <key>svl_svl_sink</key>
  <category>svl</category>
  <import>import svl</import>
  <make>svl.svl_sink($num_inputs, $fft_m_size, $fft_n_size)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->

  <param>
    <name>Num VRadios</name>
    <key>num_inputs</key>
    <value>2</value>
    <type>int</type>
  </param>

  <param>
    <name>FFT M Size</name>
    <key>fft_m_size</key>
    <value>1024</value>
    <type>int</type>
  </param>

  <param>
    <name>FFT N Size</name>
    <key>fft_n_size</key>
    <value>()</value>
    <type>raw</type>
  </param>

  <check>$num_inputs &gt; 1</check>
 
  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
    <nports>$num_inputs</nports>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>$fft_m_size</vlen>
  </source>
</block>
