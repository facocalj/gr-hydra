<?xml version="1.0"?>
<block>
  <name>svl_sink</name>
  <key>svl_svl_sink</key>
  <category>svl</category>
  <import>import svl</import>
  <make>svl.svl_sink($num_inputs, $fft_m_size, $central_frequency, $bandwidth, $vradio_config)</make>

  <param>
    <name>Num VRadios</name>
    <key>num_inputs</key>
    <value>2</value>
    <type>int</type>
  </param>
  <param>
    <name>FFT M Size</name>
    <key>fft_m_size</key>
    <value>1024</value>
    <type>int</type>
  </param>
  <param>
    <name>Central Frequency</name>
    <key>central_frequency</key>
    <value>0</value>
    <type>float</type>
  </param>
  <param>
    <name>Bandwidth</name>
    <key>bandwidth</key>
    <value>200e3</value>
    <type>float</type>
  </param>
  <param>
    <name>VRadio Config</name>
    <key>vradio_config</key>
    <value>()</value>
    <type>raw</type>
  </param>

  <check>$num_inputs &gt; 0</check>
  <check>$bandwidth &gt; 0</check>
 
  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
    <nports>$num_inputs</nports>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>
