<?xml version="1.0"?>
<block>
  <name>hydra_sink</name>
  <key>hydra_hydra_sink</key>
  <category>hydra</category>
  <import>import hydra</import>
  <make>hydra.hydra_sink($num_inputs, $fft_m_size, $central_frequency, $bandwidth,
	 ((freq1, samprate1), 
	 #if $num_inputs() > 1
	 (freq2, samprate2),
	 #end if
	 #if $num_inputs() > 2
	 (freq3, samprate3),
	 #end if
	 #if $num_inputs() > 3
	 (freq4, samprate4),
	 #end if
	 ))
  </make>

  <param>
    <name>Num VRadios</name>
    <key>num_inputs</key>
    <value>2</value>
    <type>int</type>
	<option>
		<name>1</name>
		<key>1</key>
	</option>
	<option>
		<name>2</name>
		<key>2</key>
	</option>
	<option>
		<name>3</name>
		<key>3</key>
	</option>
	<option>
		<name>4</name>
		<key>4</key>
	</option>
  </param>
  <param>
    <name>FFT M Size</name>
    <key>fft_m_size</key>
    <value>1024</value>
    <type>int</type>
  </param>
  <param>
    <name>Central Frequency</name>
    <key>central_frequency</key>
    <value>0</value>
    <type>float</type>
  </param>
  <param>
    <name>Bandwidth</name>
    <key>bandwidth</key>
    <value>4e6</value>
    <type>float</type>
  </param>
<!--
  <param>
    <name>VRadio Config</name>
    <key>vradio_config</key>
    <value>((-2e6, 2e6), (1.5e6, 500e3))</value>
    <type>raw</type>
  </param>
-->


<!-- VR1 Configuration -->
  <param>
	  <name>Freq VR1</name>
	  <key>freq1</key>
	  <value></value>
	  <type>string</type>
          <hide>#if $num_inputs() > 0 then 'none' else 'all'#</hide>
  </param>
  <param>
	  <name>Samp Rate VR1</name>
	  <key>samprate1</key>
	  <value></value>
	  <type>string</type>
          <hide>#if $num_inputs() > 0 then 'none' else 'all'#</hide>
  </param>

<!-- VR2 Configuration -->
  <param>
	  <name>Freq VR2</name>
	  <key>freq2</key>
	  <value></value>
	  <type>string</type>
          <hide>#if $num_inputs() > 1 then 'none' else 'all'#</hide>
  </param>
  <param>
	  <name>Samp Rate VR2</name>
	  <key>samprate2</key>
	  <value></value>
	  <type>string</type>
          <hide>#if $num_inputs() > 1 then 'none' else 'all'#</hide>
  </param>

<!-- VR3 Configuration -->
  <param>
	  <name>Freq VR3</name>
	  <key>freq3</key>
	  <value></value>
	  <type>string</type>
          <hide>#if $num_inputs() > 2 then 'none' else 'all'#</hide>
  </param>
  <param>
	  <name>Samp Rate VR3</name>
	  <key>samprate3</key>
	  <value></value>
	  <type>string</type>
          <hide>#if $num_inputs() > 2 then 'none' else 'all'#</hide>
  </param>

<!-- VR4 Configuration -->
  <param>
	  <name>Freq VR4</name>
	  <key>freq4</key>
	  <value></value>
	  <type>string</type>
          <hide>#if $num_inputs() > 3 then 'none' else 'all'#</hide>
  </param>
  <param>
	  <name>Samp Rate VR4</name>
	  <key>samprate4</key>
	  <value></value>
	  <type>string</type>
          <hide>#if $num_inputs() > 3 then 'none' else 'all'#</hide>
  </param>

  <check>$bandwidth &gt; 0</check>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
    <nports>$num_inputs</nports>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>
